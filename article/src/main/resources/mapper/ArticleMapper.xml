<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.remo.mapper.ArticleMapper">

    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <insert id="addResolutionWithArticleAndTag">
        insert into article_tag values (#{articleId}, #{tagId})
    </insert>

    <delete id="deleteResolutionByArticleId">
        delete from article_tag where articleId = #{articleId}
    </delete>

</mapper>
